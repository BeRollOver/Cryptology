@model Cryptology.Models.MersennePrimeModels

@{
    ViewBag.Title = "Mersenne Prime";
    long M = Convert.ToInt64(@Math.Pow(2, @Model.p)) - 1;
    long S = 4;
}

<h2>Проверка на простоту числа Мерсена 2<sup>@Model.p</sup>-1=@M</h2>

<table class="table table-bordered table-striped">
        <tr>
            <th>i</th>
            <th>S<sup>2</sup>(mod M) - 2</th>
            <th>Условие S(mod M) = 0</th>
        </tr>
    @for (int i = 0; i < @Model.p - 1; i++, S = ((S * S) % M) - 2)
    {
        <tr>
            <td>@i</td>
            <td>@S</td>
                @if (S == 0)
                {
                    <td>да</td>
                }
                else
                {
                    <td>нет</td>
                }
        </tr>
    }
</table>

<p class="lead text-center">Число Мерсена @M – @if (S == -2) { <b>простое</b> } else { <b>составное</b> } число.</p>
